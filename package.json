{
  "name": "nvim-code-screenshot",
  "version": "1.0.0",
  "description": "Node.js bindings for neovim plugin code screenshot.",
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "clean": "rm -rf $HOME/.cache/puppeteer > /dev/null 2>&1",
    "dev:install": "ts-node src/install.ts",
    "dev:screenshot": "ts-node src/screenshot.ts",
    "format": "prettier -w .",
    "prod:install": "node bin/install.cjs",
    "prod:screenshot": "node bin/screenshot.cjs"
  },
  "author": {
    "name": "Szymon Jaworski",
    "url": "https://github.com/Ofadiman"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.27",
    "esbuild": "0.20.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@puppeteer/browsers": "^2.1.0"
  }
}
