{
  "name": "nvim-codeshot",
  "version": "1.0.0",
  "description": "Node.js bindings for neovim codeshot plugin.",
  "type": "module",
  "scripts": {
    "build": "node --loader ts-node/esm --no-warnings scripts/build.ts",
    "clean": "rm -rf $HOME/.cache/puppeteer > /dev/null 2>&1",
    "debug": "node --loader ts-node/esm --no-warnings tmp/debug.ts",
    "format": "prettier -w .",
    "screenshot": "node bin/screenshot.cjs",
    "types": "tsc --noEmit",
    "setup": "node bin/setup.cjs",
    "watch": "nodemon"
  },
  "author": {
    "name": "Szymon Jaworski",
    "url": "https://github.com/Ofadiman"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.27",
    "esbuild": "0.20.1",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@puppeteer/browsers": "^2.1.0",
    "consola": "^3.2.3",
    "puppeteer": "^22.5.0",
    "shiki": "^1.2.0",
    "zod": "^3.22.4"
  }
}
